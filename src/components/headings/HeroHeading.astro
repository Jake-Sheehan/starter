---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<h1>{title}</h1>

<style>
    h1 {
        font-size: var(--fs-title-large);
        letter-spacing: -0.08em;
        background: -webkit-linear-gradient(
            0deg,
            rgba(87, 87, 217, 1) 0%,
            rgba(255, 0, 123, 1) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
